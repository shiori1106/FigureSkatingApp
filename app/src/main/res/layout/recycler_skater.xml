<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_result"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">
    <!--app:cardBackgroundColor="@color/clean">-->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/clean"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">


        <TextView
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/sunshine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!--
        <ImageView
            android:id="@+id/image_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_check_24"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
            -->

        <TextView
            android:id="@+id/text_season"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:text="2017-2018"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_competition_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="6dp"
            android:text="/ Jr World"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_season"/>

        <TextView
            android:id="@+id/text_final_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="190dp"
            android:text="　…　324.34"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_final_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="(1)"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/text_final_score"/>




        <TextView
            android:id="@+id/text_sp_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="60dp"
            android:text="-SP:110.34"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/text_season"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_sp_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="(1)"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/text_season"
            app:layout_constraintStart_toEndOf="@id/text_sp_score"/>

        <TextView
            android:id="@+id/text_fs_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="60dp"
            android:text="-FS:210.34"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/text_sp_score"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_fs_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingBottom="15dp"
            android:text="(2)"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/text_sp_score"
            app:layout_constraintStart_toEndOf="@id/text_fs_score"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>